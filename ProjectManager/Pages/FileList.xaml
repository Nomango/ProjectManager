             xmlns:events="clr-namespace:ProjectManager.Events"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel MinWidth="200">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BackwardBtn" Content="&lt;" Click="ButtonBackward_Click" Margin="2" />
                <Button x:Name="ForwardBtn" IsEnabled="False" Content="&gt;" Click="ButtonForward_Click" Margin="2" />
            </StackPanel>
            <ProgressBar x:Name="Progress" Visibility="Hidden" Minimum="0" Maximum="1" Height="16" Margin="0,0,0,5" />
            <ScrollViewer>
                <WrapPanel x:Name="FilePanel" Orientation="Horizontal" ItemHeight="120" ItemWidth="120" Margin="0,0,0,0" >
                </WrapPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
