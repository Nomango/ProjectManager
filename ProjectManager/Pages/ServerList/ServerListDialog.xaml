<mui:ModernDialog x:Class="ProjectManager.Pages.ServerList.ServerListDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="120" d:DesignWidth="220"
                  MinWidth="220" MinHeight="120"
                  Title="ModernDialog">

    <ScrollViewer>
        <StackPanel MinWidth="200">
            <TextBlock Text="Server IP" Margin="16,5,0,0" Style="{StaticResource Heading2}"/>
            <TextBox x:Name="TextHostIP" Margin="16,5,0,0" Width="150" HorizontalAlignment="Left" />
        </StackPanel>
    </ScrollViewer>

    <mui:ModernDialog.Buttons>
    </mui:ModernDialog.Buttons>

</mui:ModernDialog>
